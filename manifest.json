{
  "manifest_version": 3,
  "name": "ULimiter",
  "version": "1.0",
  "description": "Reduces the addictivity of YouTube Shorts",
  "permissions": ["storage"],
  "host_permissions": ["*://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}